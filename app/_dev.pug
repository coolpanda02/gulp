//All .sass, .scss, .pug, .jade files that start with an underscore don"t compile. These files just for development

//Inject SVG into page
//name - file name
//modificators - BEM methodology
//BEM type: block
mixin icon(name, modificators)
	if modificators.length == 0
		svg(block="icon" mods="icon--" + name)
			use(xlink:href="#icon-" + name)
	else
		- function modificatorsToString(modificatorsArray) { let ClassesString = ""; for (var ind = 0; ind < modificatorsArray.length; ind++) { ClassesString = ClassesString + " " + modificatorsArray[ind]; }; return ClassesString; };
		svg(block="icon" mods="icon--" + name + " " + modificatorsToString(modificators))
			use(xlink:href="#icon-" + name)

//Return current time
- function time() { return new Date().getTime() }
